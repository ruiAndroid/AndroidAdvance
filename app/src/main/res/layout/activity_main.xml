<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    tools:context=".MainActivity">

    <com.rui.framelibrary.view.ChangeFontColorView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        />
    <Button
        android:id="@+id/dialog_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/app_tag_vip"
        />
    <Button
        android:id="@+id/skin_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skinLoad"
        android:layout_centerInParent="true"
        android:focusable="true"
        android:background="@drawable/app_tag_vip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200px"
        />

    <Button
        android:id="@+id/skin_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jump"
        android:focusable="true"
        android:background="@drawable/app_tag_vip"
        android:layout_below="@+id/skin_load"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/skin_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skinRestore"
        android:focusable="true"
        android:background="@drawable/app_tag_vip"
        android:layout_alignParentBottom="true"
        />

    <com.rui.framelibrary.view.banner.BannerViewPager
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
</RelativeLayout>